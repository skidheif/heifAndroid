<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayE5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/edit_cl_layout_border_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDishTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/roboto"
            android:text="Том Ям суп с \nморепродуктами"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/ivDishPhoto"
            app:layout_constraintTop_toTopOf="@id/ivDishPhoto" />


        <TextView
            android:id="@+id/tvDishDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/work_sans"
            android:text="Бульон из пряного говяжьего \nмясного супа с кокосовым молок..."
            android:textColor="@android:color/black"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/ivDishPhoto"
            app:layout_constraintTop_toBottomOf="@id/tvDishTitle" />

<!--        <ImageView-->
<!--            android:id="@+id/tvHeartIcon"-->
<!--            android:layout_width="32dp"-->
<!--            android:layout_height="32dp"-->
<!--            android:layout_marginTop="14dp"-->
<!--            android:layout_marginEnd="16dp"-->
<!--            android:src="@drawable/ic_heart_icon"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="@id/ivDishPhoto" />-->

        <TextView
            android:id="@+id/tvDishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="124dp"
            android:background="@drawable/edit_text_background_with_corner_radius"
            android:fontFamily="@font/roboto"
            android:paddingStart="24dp"
            android:paddingTop="4dp"
            android:paddingEnd="20dp"
            android:paddingBottom="4dp"
            android:text="235 ₽"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/ivDishPhoto"
            app:layout_constraintTop_toBottomOf="@id/tvDishDescription" />

        <ImageView
            android:id="@+id/ivDishPhoto"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/tom_yam_dish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>